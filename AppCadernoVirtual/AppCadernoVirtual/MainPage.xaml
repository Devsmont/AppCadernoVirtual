<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadernoVirtual.MainPage">
    
    
    <StackLayout>
        <!-- Label: Texto que vai estar presente na tela do Aplicativo, sendo um texto solto, sem interação por enquanto
             Button: Botão programado para receber a informação que um usuario tocou a tela-->
        <Label  Text="Selecione Seu Ano"     HorizontalOptions="Center"/>
        <Button Text="Primeiro"              Clicked="Button_Primeiro" />
        <Button Text="Segundo"               Clicked="Button_Segundo"  />
        <Button Text="Terceiro"              Clicked="Button_Terceiro"  />

    </StackLayout>

</ContentPage>
